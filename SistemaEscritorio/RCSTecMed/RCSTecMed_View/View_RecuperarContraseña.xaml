<Window x:Class="RCSTecMed_View.View_RecuperarContraseña"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCSTecMed_View"
        mc:Ignorable="d"
        Title="RCS-TecMed - Recuperar Contraseña" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7B1E3A" Offset="0.0"/>
            <!-- Burdeo oscuro -->
            <GradientStop Color="#A52A4D" Offset="0.5"/>
            <!-- Burdeo medio -->
            <GradientStop Color="#C94C6E" Offset="1.0"/>
            <!-- Burdeo claro -->
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Recuperar Contraseña" FontFamily="Arial" FontSize="25" FontWeight="Black" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label Content="Ingrese su RUT" FontFamily="Ariel" FontSize="15" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="20,20,0,0"/>
            <TextBox x:Name="TXT_Rut" Height="30" Width="100" Text="12345678" FontFamily="Arial" FontSize="15" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
                     Foreground="Azure" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,20,0,0"/>
            <TextBox x:Name="TXT_Dv" Height="30" Width="20" Text="K" FontFamily="Arial" FontSize="15" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
         Foreground="Azure" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,20,0,0"/>
        </Grid>
    </Grid>
</Window>
