<UserControl x:Class="RCSTecMed_View.RegistroSocio_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RCSTecMed_View"
             mc:Ignorable="d" 
             d:DesignHeight="840" d:DesignWidth="1740">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#7B1E3A" Offset="0.0"/>
                <!-- Burdeo oscuro -->
                <GradientStop Color="#A52A4D" Offset="0.5"/>
                <!-- Burdeo medio -->
                <GradientStop Color="#D8A0A8" Offset="1.0"/>
                <!-- Burdeo claro -->
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Registro de Socios" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="30" FontWeight="Black" Foreground="White"/>
                <Label Content="Colegio de Tecnólogos Médicos de Chile" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="20" FontWeight="Black" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
