<UserControl x:Class="RCSTecMed_View.RegistroSocio_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RCSTecMed_View"
             mc:Ignorable="d" 
             d:DesignHeight="840" d:DesignWidth="1700">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#7B1E3A" Offset="0.0"/>
                <!-- Burdeo oscuro #7B1E3A -->
                <GradientStop Color="#A52A4D" Offset="0.5"/>
                <!-- Burdeo medio #A52A4D -->
                <GradientStop Color="#D8A0A8" Offset="1.0"/>
                <!-- Burdeo claro #D8A0A8 -->
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Registro de Socios" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="30" FontWeight="Black" Foreground="White"/>
                <Label Content="Colegio de Tecnólogos Médicos de Chile" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="20" FontWeight="Black" Foreground="White"/>
            </StackPanel>
            <Label Content="N° de Socios Registrados:" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial" FontSize="15" Foreground="White" Margin="1350,0,0,0"/>
            <Label x:Name="LB_TotalRegistrados" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial" FontSize="15" Foreground="Yellow" 
                   Height="30" Width="100" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="1550,0,0,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Label Content="ANTECEDENTES PERSONALES" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" FontWeight="Black" Foreground="LightGoldenrodYellow"
                   Margin="10,0,0,0" FontStyle="Italic" Grid.Row="0"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Border CornerRadius="10" BorderBrush="White" BorderThickness="2" Background="Transparent" Grid.Column="1"/>
                <Grid Grid.Column="1">
                    <Label Content="RUT" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="10" FontWeight="Bold" Foreground="White" Margin="5,5,0,0"/>
                    <TextBox x:Name="TXT_Rut" Height="20" Width="100" FontFamily="Arial" FontSize="15" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
                               Foreground="Azure" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Margin="5,25,0,0" KeyDown="TXT_Rut_KeyDown"/>
                    <TextBox x:Name="TXT_Dv" Height="20" Width="20" FontFamily="Arial" FontSize="15" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
                               Foreground="Azure" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Margin="110,25,0,0" KeyDown="TXT_Dv_KeyDown"/>
                    <Label Content="APELLIDO PATERNO" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="10" Foreground="White" Margin="150,5,0,0"/>
                    <TextBox x:Name="TXT_ApellidoPaterno" Height="20" Width="300" FontFamily="Arial" FontSize="15" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
                               Foreground="Azure" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" 
                               Margin="150,25,0,0" KeyDown="TXT_ApellidoPaterno_KeyDown" IsEnabled="False"/>
                    <Label Content="APELLIDO MATERNO" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="10" Foreground="White" Margin="470,5,0,0"/>
                    <TextBox x:Name="TXT_ApellidoMaterno" Height="20" Width="300" FontFamily="Arial" FontSize="15" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
                             Foreground="Azure" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" 
                             Margin="470,25,0,0" KeyDown="TXT_ApellidoMaterno_KeyDown" IsEnabled="False"/>
                    <Label Content="NOMBRES" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="10" Foreground="White" Margin="790,5,0,0"/>
                    <TextBox x:Name="TXT_Nombres" Height="20" Width="300" FontFamily="Arial" FontSize="15" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
                             Foreground="Azure" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" 
                             Margin="790,25,0,0" KeyDown="TXT_Nombres_KeyDown" IsEnabled="False"/>
                    <Label Content="FECHA NACIMIENTO" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="10" FontWeight="Bold" Foreground="White" Margin="1110,5,0,0"/>
                    <DatePicker x:Name="DP_FechaNacimiento" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="120" FontFamily="Arial" FontSize="15" Margin="1115,25,0,0"
                                Style="{StaticResource DatePickerBordeInferiorDerechoBlanco}"/>
                    <Label Content="N° REG. SUPERINTENEDENCIA" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="10" FontWeight="Bold" Foreground="Wheat" 
                           Margin="1260,5,0,0"/>
                    <TextBox x:Name="TXT_RegistroSuperintendencia" Height="20" Width="180" FontFamily="Arial" FontSize="15" FontWeight="Bold" Style="{StaticResource WhiteTextBoxStyle}" Background="Transparent"
                             Foreground="Wheat" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" 
                             Margin="1260,25,0,0" IsEnabled="False"/>
                </Grid>


            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Label Content="ANTECEDENTES ACADÉMICOS" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" FontWeight="Black" Foreground="LightGoldenrodYellow" 
                   Margin="10,0,0,0" FontStyle="Italic"/>
        </Grid>

        <Grid Grid.Row="3">
            <Label Content="ANTECEDENTES LABORALES" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" FontWeight="Black" Foreground="LightGoldenrodYellow" 
                   Margin="10,0,0,0" FontStyle="Italic"/>
        </Grid>

        <Grid Grid.Row="4">
            <Label Content="TIPO DE DESCUENTO" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" FontWeight="Black" Foreground="LightGoldenrodYellow" 
                   Margin="10,0,0,0" FontStyle="Italic"/>
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BTN_Buscar" Width="200" Height="45" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Buscar_Click" Grid.Column="1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Search" Width="25" Height="25" Margin="0,0,8,0"/>
                    <TextBlock Text="Buscar&#x0a;Socio" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Grabar" Width="200" Height="45" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Grabar_Click" Grid.Column="3">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Save" Width="25" Height="25" Margin="0,0,8,0"/>
                    <TextBlock Text="Registrar&#x0a;Socio" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Actualizar" Width="200" Height="45" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Actualizar_Click" Grid.Column="5">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="ArrowRotateForward" Width="25" Height="25" Margin="0,0,8,0"/>
                    <TextBlock Text="Actualizar&#x0a;Socio" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Eliminar" Width="200" Height="45" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Eliminar_Click" Grid.Column="7">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="TrashAlt" Width="25" Height="25" Margin="0,0,8,0"/>
                    <TextBlock Text="Eliminar&#x0a;Socio" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Limpiar" Width="200" Height="45" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Limpiar_Click" Grid.Column="9">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="DesktopAlt" Width="25" Height="25" Margin="0,0,8,0"/>
                    <TextBlock Text="Limpiar&#x0a;Pantalla" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Home" Width="200" Height="45" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Home_Click" Grid.Column="11">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="SignOutAlt" Width="25" Height="25" Margin="0,0,8,0"/>
                    <TextBlock Text="Salir" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
</UserControl>
