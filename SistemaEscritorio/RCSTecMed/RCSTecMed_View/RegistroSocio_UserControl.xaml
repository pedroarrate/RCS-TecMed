<UserControl x:Class="RCSTecMed_View.RegistroSocio_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RCSTecMed_View"
             mc:Ignorable="d" 
             d:DesignHeight="840" d:DesignWidth="1700">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#7B1E3A" Offset="0.0"/>
                <!-- Burdeo oscuro -->
                <GradientStop Color="#A52A4D" Offset="0.5"/>
                <!-- Burdeo medio -->
                <GradientStop Color="#D8A0A8" Offset="1.0"/>
                <!-- Burdeo claro -->
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Registro de Socios" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="30" FontWeight="Black" Foreground="White"/>
                <Label Content="Colegio de Tecnólogos Médicos de Chile" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="20" FontWeight="Black" Foreground="White"/>
            </StackPanel>
            <Label Content="N° de Socios Registrados:" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial" FontSize="15" Foreground="White" Margin="1350,0,0,0"/>
            <Label x:Name="LB_TotalRegistrados" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial" FontSize="15" Foreground="Yellow" 
                   Height="30" Width="100" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="1550,0,0,0"/>
        </Grid>
        <Grid Grid.Row="1">
            
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BTN_Buscar" Width="120" Height="40" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Buscar_Click" Grid.Column="1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Search" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Buscar" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Grabar" Width="120" Height="40" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Grabar_Click" Grid.Column="3">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Save" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Registrar" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Actualizar" Width="120" Height="40" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Actualizar_Click" Grid.Column="5">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="ArrowRotateForward" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Registrar" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Eliminar" Width="120" Height="40" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Eliminar_Click" Grid.Column="7">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="TrashAlt" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Eliminar" VerticalAlignment="Center" FontWeight="Bold" />
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Limpiar" Width="120" Height="40" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Limpiar_Click" Grid.Column="9">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="DesktopAlt" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Limpiar&#x0a;Pantalla" VerticalAlignment="Center" FontWeight="Bold" FontSize="9.5"/>
                </StackPanel>
            </Button>

            <Button x:Name="BTN_Home" Width="120" Height="40" Background="#FFDDDDDD" Style="{StaticResource BotonEstilo1}" Click="BTN_Home_Click" Grid.Column="11">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="SignOutAlt" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Salir" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
</UserControl>
