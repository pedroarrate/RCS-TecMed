<Window x:Class="RCSTecMed_View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCSTecMed_View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TXT_Codigo" HorizontalAlignment="Left" Margin="258,102,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Codigo" HorizontalAlignment="Left" Margin="111,102,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TXT_Descripcion" HorizontalAlignment="Left" Margin="258,200,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Descripcion" HorizontalAlignment="Left" Margin="111,200,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BTN_Grabar" Content="Grabar" HorizontalAlignment="Left" Margin="428,330,0,0" VerticalAlignment="Top" Click="BTN_Grabar_Click"/>
        <Button x:Name="BTN_Buscar" Content="Buscar" HorizontalAlignment="Left" Margin="487,330,0,0" VerticalAlignment="Top" Click="BTN_Buscar_Click"/>
        <Button x:Name="BTN_Actualizar" Content="Actualizar" HorizontalAlignment="Left" Margin="546,330,0,0" VerticalAlignment="Top" Click="BTN_Actualizar_Click"/>
        <Button x:Name="BTN_Borrar" Content="Borrar" HorizontalAlignment="Left" Margin="620,330,0,0" VerticalAlignment="Top" Click="BTN_Borrar_Click"/>
        
        <DataGrid x:Name="DG_Estado" AutoGenerateColumns="False" Margin="409,102,44,196" IsReadOnly="True" SelectionChanged="DG_Estado_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CODIGO ESTADO" Binding="{Binding IdEstadoSocio}"/>
                <DataGridTextColumn Header="DESCRIPCION ESTADO SOCIO" Binding="{Binding DescripcionEstadoSocio}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
