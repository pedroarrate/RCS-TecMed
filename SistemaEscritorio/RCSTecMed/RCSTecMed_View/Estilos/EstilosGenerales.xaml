<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Color burdeo -->
    <SolidColorBrush x:Key="BurdeoBrush" Color="#641c34"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
    <SolidColorBrush x:Key="NegroBrush" Color="Black"/>
    <SolidColorBrush x:Key="BurdeoPalidoBrush" Color="#D8A0A8"/>

    <LinearGradientBrush x:Key="BurdeoGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7B1E3B" Offset="0.0"/>
        <GradientStop Color="#B03A5B" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Estilo para TextBox con borde burdeo inferior y derecho -->
    <Style x:Key="BurdeoTextBoxStyle" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border BorderBrush="{StaticResource BurdeoBrush}" 
                                BorderThickness="0,0,3,1" 
                                Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para TextBox con borde blanco inferior y derecho -->
    <Style x:Key="WhiteTextBoxStyle" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border BorderBrush="{StaticResource WhiteBrush}" 
                             BorderThickness="0,0,3,1" 
                             Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para TextBox con borde Negro y fondo burdeo gradiente -->
    <Style x:Key="BurdeoGradientTextBoxStyle" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border BorderBrush="{StaticResource NegroBrush}"
                            BorderThickness="0,0,3,1"
                            Background="{StaticResource BurdeoGradientBrush}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para TextBox con borde Negro y fondo burdeo palido -->
    <Style x:Key="BurdeoPalidoTextBoxStyle" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border BorderBrush="{StaticResource NegroBrush}"
                            BorderThickness="0,0,3,1"
                            Background="{StaticResource BurdeoPalidoBrush}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Estilo para PasswordtBox con borde inferior y derecho -->
    <Style x:Key="BurdeoPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Grid>
                        <Border BorderBrush="{StaticResource BurdeoBrush}" 
                            BorderThickness="0,0,3,1" 
                            Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para Botones color Burdeo y letras blancas -->
    <Style x:Key="BotonEstilo1" TargetType="Button">
        <Setter Property="Background" Value="#FFDDDDDD"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="0"
                        CornerRadius="20"
                        Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#800000"/>
                            <!-- Burdeo -->
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo Datepicker fonfo transparente y bordes blancos inferior y derecho -->
    <Style x:Key="DatePickerBordeInferiorDerechoBlanco" TargetType="DatePicker">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="0,0,2,2"/>
        <!-- <Setter Property="FontFamily" Value="Arial"/> -->
        <!-- <Setter Property="FontSize" Value="15"/> -->
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>




    <!-- Puedes agregar más estilos aquí -->

</ResourceDictionary>