<Window x:Class="RCSTecMed_View.View_ModuloSecretaria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCSTecMed_View"
        mc:Ignorable="d"
        Title="View_ModuloSecretaria" Height="1000" Width="1900"
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Image Source="/Imagenes/logo_colegioTecMed1.jpg" Stretch="Fill" Height="120" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0"/>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="RCS-TecMed" FontFamily="Arial" FontSize="30" FontWeight="Black" Foreground="#641c34" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Label Content="Módulo: Secretaria" FontFamily="Arial" FontSize="40" FontWeight="Black" Foreground="#641c34" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="2">
                <Label Content="Fecha: " HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="15" FontWeight="Bold" Margin="10,20,0,0"/>
                <Label x:Name="LB_Fecha" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="15" Margin="150,20,0,0"/>
                <Label Content="Hora Conexión:" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="15" FontWeight="Bold" Margin="10,50,0,0"/>
                <Label x:Name="LB_HoraConexion" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="15" Margin="150,50,0,0"/>
                <Label Content="Usuario:" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="15" FontWeight="Bold" Margin="10,80,0,0"/>
                <Label x:Name="LB_Usuario" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="15" Margin="150,80,0,0"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TabControl TabStripPlacement="Left"
            Margin="10"
            FontFamily="Arial"
            FontSize="16"
            BorderBrush="#641c34"
            BorderThickness="2"
            Background="White"
            SelectedIndex="0">

                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#641c34"
                                Background="Transparent"
                                Margin="4"
                                Padding="8">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <!-- Ícono opcional -->
                                                <TextBlock Text="🏛" FontSize="16" Margin="0,0,6,0" Visibility="Collapsed"/>
                                                <ContentPresenter ContentSource="Header" />
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#641c34"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#8a2c4a"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- HOME (oculta encabezado) -->
                    <TabItem Header="" Visibility="Collapsed">
                        <Grid Background="White">
                            <Image Source="/Imagenes/ModuloSecretaria.png" />
                            <Label Content="Bienvenido al módulo Secretaría" 
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#641c34"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>
                        </Grid>
                    </TabItem>
                        <!-- Registro de Socio -->
                    <TabItem Header="Registro de Socio">
                        <Grid Background="White">
                            <local:RegistroSocio_UserControl/>

                        </Grid>
                    </TabItem>

                    <!-- Centro Académico -->
                    <TabItem Header="Centro Académico">
                        <Grid Background="White">
                            <!-- Contenido -->
                        </Grid>
                    </TabItem>

                    <!-- Lugar de Trabajo -->
                    <TabItem Header="Lugar de Trabajo">
                        <Grid Background="White">
                            <!-- Contenido -->
                        </Grid>
                    </TabItem>

                    <!-- Lugar de Certificacion -->
                    <TabItem Header="Tipo de Certificación">
                        <Grid Background="White">
                            <!-- Contenido -->
                        </Grid>
                    </TabItem>
                </TabControl>


            </Grid>
        </Grid>
    </Grid>
</Window>
